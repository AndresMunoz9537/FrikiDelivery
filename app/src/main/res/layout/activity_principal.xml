<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.optic.FrikiDelivery.activities.PrincipalActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/fondo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <ImageButton
                android:id="@+id/inicioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="80dp"
                android:backgroundTint="@color/fondo"
                android:src="@mipmap/arrow_back" />



            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Perfíl"
                android:textColor="@color/purple"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_133"
            android:elevation="15dp"
            android:outlineSpotShadowColor="@color/purple">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="E-mail"
                android:textColor="#b7abcf"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_133"
                android:paddingLeft="1dp"
                android:textColor="@color/purple"
                android:hint="email"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textColorHint="@color/purple_light" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Contraseña"
                android:textColor="#b7abcf"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/purple"
                android:background="@drawable/rectangle_133"
                android:textColorHint="@color/purple_light"
                app:layout_anchor="@+id/linearLayout"
                app:layout_anchorGravity="center"
                android:hint="contraseña"
                android:paddingTop="5dp"
                android:paddingStart="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Celular"
                    android:textColor="#b7abcf"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/addresTextView"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_133"
                    android:hint="+506"
                    android:textColor="@color/purple"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/purple_light"
                    android:textSize="16sp"
                    app:layout_anchorGravity="center" />

                <TextView
                    android:layout_width="239dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_133"
                    android:textColorHint="@color/purple_light"
                    app:layout_anchorGravity="center"
                    android:hint="312456452"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/purple"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Fecha de nacimiento"
                android:textColor="#b7abcf"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_133"
                android:textColorHint="@color/purple_light"
                app:layout_anchor="@+id/linearLayout"
                app:layout_anchorGravity="center"
                android:hint="03/08/2022"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:textColor="@color/purple"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Sexo"
                android:textColor="#b7abcf"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView

                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_133"
                    android:hint="Mujer"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/purple_light"
                    android:textSize="16sp"
                    app:layout_anchorGravity="center"
                    android:textColor="@color/purple"/>

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_133"
                    android:hint="Hombre"
                    android:padding="5dp"
                    android:textColor="@color/purple"
                    android:textAlignment="center"
                    android:textColorHint="@color/purple_light"
                    android:textSize="16sp"
                    app:layout_anchorGravity="center" />

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_133"
                    android:hint="Otro"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/purple_light"
                    android:textSize="16sp"
                    app:layout_anchorGravity="center"
                    android:textColor="@color/purple"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@mipmap/iconpen"
                android:text="Editar informacion"
                android:textColor="@color/purple"
                android:textSize="12sp"
                android:drawablePadding="7dp" />

        </LinearLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="60dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="0dp"
        android:src="@mipmap/facebook"
        app:civ_border_color="@color/purple"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/purple" />

    <ImageButton
        android:id="@+id/logOutBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/purple"
        android:src="@mipmap/house" />

</RelativeLayout>
    </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_marginTop="50dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp"
        android:layout_gravity="center|top"
        app:civ_circle_background_color="@color/purple_light"
        />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="John Doe"
         android:layout_marginTop="150dp"
         android:textAlignment="center"
         android:textColor="@color/purple"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="San Francisco,CA"
        android:textColor="@color/purple"
        android:gravity="center"
        android:layout_marginTop="170dp"
        />








</androidx.coordinatorlayout.widget.CoordinatorLayout>