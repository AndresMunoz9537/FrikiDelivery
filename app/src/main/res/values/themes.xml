<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeliveryKotlinUdemy" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>




        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarBackground">@color/purple</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DeliveryKotlinUdemy.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DeliveryKotlinUdemy.AppBarOverlay" parent="Theme.AppCompat.DayNight" >
    <item name="colorPrimary">@color/purple</item>
    </style>

    <style name="Theme.DeliveryKotlinUdemy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

